<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="main.css">
    <title>Document</title>
</head>
<body>
    <form action="/login" method="post">
        <div class="imgcontainer">
            <img src="https://www.pngall.com/wp-content/uploads/12/Avatar-PNG-Image.png" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="email"><b>Email <i>*</i></b></label>
            <input type="text" placeholder="Enter Email" name="email" id="email">

            <label for="psw"><b>Password <i>*</i></b></label>
            <input type="password" placeholder="Enter Password" name="password" id="psw">

            <label for="fn"><b>Name</b></label>
            <input type="text" placeholder="Name" name="firstName" id="fn">

            <label for="ln"><b>Surname</b></label>
            <input type="text" placeholder="Surname" name="lastName" id="ln">

            <label for="age"><b>Age</b></label>
            <input type="number" placeholder="Age" name="age" id="age">

            <label for="city"><b>City</b></label>
            <input type="text" placeholder="City" name="city" id="city">

            <input class="login-btn" type="submit" value="login">
        </div>
    </form>
</body>
</html>
